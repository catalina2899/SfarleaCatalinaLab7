<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SfarleaCatalinaLab7.MainPage"
             Title="Pagina mea">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Image Source="pom.jpg"
                   HeightRequest="200"
                   Aspect="AspectFit"
                   SemanticProperties.Description="Imagine lista cumparaturi" />

            <Label Text="Sfarlea Catalina"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Sunt o persoană ambițioasă, optimistă și pasionată de psihologie, dezvoltare personală și activități sociale. Îmi place să lucrez cu oamenii și să descopăr lucruri noi."
                   FontSize="18"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            <Label Text="“Discipline is choosing what you want most over what you want now.”"
                   FontSize="16"
                   FontAttributes="Italic"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
